<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movies_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joper.myfirstapp.movies.MoviesDetails">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_moviedetails_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            />

        <TextView
            android:id="@+id/textView_moviedetails_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Name"
            android:layout_below="@id/imageView_moviedetails_image"
            android:textSize="25sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/textView_moviedetails_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Description "
            android:layout_below="@+id/textView_moviedetails_name"
            android:textSize="25sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/textView_moviedetails_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Director"
            android:layout_below="@+id/textView_moviedetails_description"
            android:textSize="25sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/textView_moviedetails_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Category"
            android:layout_below="@+id/textView_moviedetails_director"
            android:textSize="25sp"
            android:layout_marginBottom="6dp"/>



    </RelativeLayout>








</ScrollView>
